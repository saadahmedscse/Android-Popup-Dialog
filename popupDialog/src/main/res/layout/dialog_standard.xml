<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:background="@drawable/bg_white_10">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/home_image" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bold"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        tools:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        tools:text="Are you sure you want to logout? This action cannot be undone"
        android:textColor="@color/text_color_light"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_heading"/>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrey"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_divider"
        android:layout_marginTop="13dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg_light_grey_10"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/colorDarkGrey"
            android:text="@string/negative"/>

        <TextView
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg_blue_10"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:text="@string/positive"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>